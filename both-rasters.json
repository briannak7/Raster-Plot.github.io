{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "For Assignment 3. Temperature taken daily and averaged over the month of August 2017 pitted against fires in the same month.",
    "width": 650,
    "height": 350,
    "autosize": "fit-x",
    "padding": 15,
    "title": {
        "offset": 10,
        "text": "Monthly Average Land Temperature and Wildfires for August 2017",
        "fontSize": 18,
        "subtitle": "Wildfires are denoted as black diamonds",
        "subtitleFontSize": 14
    },

    "signals": [
        {
            "name": "projection", "value": "naturalEarth1"
        },
        {
            "name": "scale", "value": 150
        },
        {
            "name": "rotate", "value": -17
        },
        {
            "name": "opacity", "value": 1
        },
        {
            "name": "levels", "value": 8
        },
        {
            "name": "stop", "value":50
        },
        {
            "name": "step",
            "update": "stop / levels"
        }
    ],

    "data": [
        {
            "name": "temp",
            "url": "aug-2017.json"
        },
        {
            "name": "contours",
            "source": "temp",
            "transform": [
                {
                    "type": "isocontour",
                    "thresholds": {"signal": "sequence(-25, stop, step)"},
                    "nice": true
                }
            ]
        },
        {
            "name": "world",
            "url": "world-110m.json",
            "format": {"type": "topojson", "feature": "countries"}
        },
        {
            "name": "fires",
            "url": "aug-2017-fires.json"
        },
        {
            "name": "contours2",
            "source": "fires",
            "transform": [
                {
                    "type": "isocontour",
                    "thresholds": {"signal": "sequence(step, 50, step)"}
                }
            ]
        },
        {
            "name": "graticule",
            "transform": [
                {
                    "type": "graticule",
                    "step": [{"signal": "step"}, {"signal": "step"}]
                }
            ]
        }
    ],

    "projections": [
        {
            "name": "projection",
            "type": {"signal": "projection"},
            "scale": {"signal": "scale"},
            "rotate": {"signal": "[rotate]"},
            "translate": {"signal": "[width/2, height/2]"}
        }
    ],

    "scales": [
        {
            "name": "color",
            "type": "quantize",
            "domain": {"signal": "[-25, 50]"},
            "range": {"scheme": "turbo"}
        }
    ],

    "marks": [
        {
            "type": "shape",
            "clip": true,
            "from": {"data": "world"},
            "encode": {
                "update": {
                    "strokeWidth": {"value": 1},
                    "stroke": {"value": "#eee"},
                    "fill": {"value": "#ddd"}
                }
            },
            "transform": [
                {
                    "type": "geoshape",
                    "projection": "projection"
                }
            ]
        },
        {
            "type": "shape",
            "clip": true,
            "from": {"data": "graticule"},
            "encode": {
                "update": {
                    "strokeWidth": {"value": 1},
                    "stroke": {"value": "#dbdad7"},
                    "fill": {"value": null}
                }
            },
            "transform": [
                { "type": "geoshape", "projection": "projection" }
            ]
        },
        {
            "type": "shape",
            "clip": true,
            "from": { "data": "contours"},
            "encode": {
                "update": {
                    "fill": {"scale": "color", "field": "contour.value"},
                    "fillOpacity": 1
                }
            },
            "transform": [
                {
                    "type": "geoshape",
                    "field": "datum.contour",
                    "projection": "projection"
                }
            ]
        },
        {
            "type": "shape",
            "clip": true,
            "from": { "data": "contours2"},
            "encode": {
                "update": {
                    "fill": {"value": "black"},
                    "fillOpacity": {"value": 0.25}
                }
            },
            "transform": [
                {
                    "type": "geoshape",
                    "field": "datum.contour",
                    "projection": "projection"
                }
            ]
        }
    ],


    "legends": [
        {
            "title": "Temperature (C)",
            "fill": "color",
            "orient": "bottom",
            "offset": 10,
            "type": "gradient",
            "gradientLength": 300,
            "gradientThickness": 12,
            "titlePadding": 10,
            "titleOrient": "left",
            "titleAnchor": "end",
            "direction": "horizontal"
        }
    ],

    "config": {
        "legend": {"layout": {"anchor": "middle"}}
    }
}
